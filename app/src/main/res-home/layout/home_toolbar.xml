<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:alpha="0.9"
    android:background="@drawable/shape_toolbar_home">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/close_home"
        android:layout_width="@dimen/icon_default"
        android:layout_height="@dimen/icon_default"
        android:layout_margin="@dimen/default_margin"
        android:src="@drawable/ic_close_x"
        android:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/bold"
        android:layout_width="@dimen/match_constraints"
        android:layout_height="@dimen/match_constraints"
        android:gravity="center"
        android:padding="@dimen/default_margin"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/x_title_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginEnd="@dimen/default_margin" />

</androidx.constraintlayout.widget.ConstraintLayout>